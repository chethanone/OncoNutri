# ================================
# OncoNutri+ Environment Configuration Template
# ================================
# Copy this file to .env and fill in your actual values
# This template shows all required environment variables

# ================================
# DATABASE CONFIGURATION
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=onconutri
DB_USER=postgres
DB_PASSWORD=your_database_password_here

# ================================
# NODE.JS BACKEND SERVER
# ================================
NODE_ENV=development
PORT=5000
NODE_SERVER_HOST=0.0.0.0

# JWT Authentication
JWT_SECRET=change-this-to-a-long-random-string-for-security
JWT_EXPIRY=7d

# ================================
# FASTAPI ML SERVICE
# ================================
ML_SERVICE_HOST=0.0.0.0
ML_SERVICE_PORT=8000
ML_SERVICE_URL=http://localhost:8000

# ================================
# API KEYS
# ================================
# YouTube Data API v3 (for educational video recommendations)
# Get from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your-youtube-api-key-here

# Google Gemini API (for AI-powered food recommendations)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-gemini-api-key-here

# ================================
# LOGGING & DEBUGGING
# ================================
LOG_LEVEL=info
DEBUG=false

# ================================
# OPTIONAL - EXTERNAL SERVICES
# ================================
# Uncomment and add if using these services
# NUTRITIONIX_API_KEY=your_nutritionix_api_key
# USDA_API_KEY=your_usda_api_key
